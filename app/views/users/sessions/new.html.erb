<%= render '/users/form', start: true, header: t('Sign in') %>

<%= simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f| %>
    <div><%= f.label t(:email) %>
      <br/>
      <%= f.email_field :email, autofocus: true, required: true %></div>

    <div><%= f.label t(:password) %>
      <br/>
      <%= f.password_field :password, required: true %></div>
    <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label t(:remember_me) %></div>
    <% end -%>
    <div><%= f.submit t('Sign'), class: 'button' %></div>
<% end %>

<%= render '/users/form', start: false %>