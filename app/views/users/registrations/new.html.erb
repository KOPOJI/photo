<%= render '/users/form', start: true, header: t('Sign up') %>

<%= simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
    <%= devise_error_messages! %>

    <div>
      <%= f.label :username, t(:username) %>
      <%= f.text_field :username, autofocus: true, required: true %>
    </div>

    <div>
      <%= f.label :email, t(:email) %>
      <%= f.email_field :email, required: true %>
    </div>

    <div>
      <%= f.label :password, t(:password) %>
      <%= f.password_field :password, required: true %></div>

    <div>
      <%= f.label :password_confirmation, t(:password_confirmation) %>
      <%= f.password_field :password_confirmation, required: true %>
    </div>

    <div><%= f.submit t('Sign up'), class: 'button' %>
    </div>
<% end %>

<%= render '/users/form', start: false %>
